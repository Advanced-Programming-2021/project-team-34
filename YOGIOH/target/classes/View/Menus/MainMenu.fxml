<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.Menus.MainMenu"
            prefHeight="900.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER">
            <Label text="منوی اصلی" styleClass="title" />
