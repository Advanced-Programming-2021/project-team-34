<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.Menus.ChangePasswordMenu"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER">
            <Label text="ویراستن گذرواژه"/>
            <HBox alignment="CENTER">
                <GridPane fx:id="currentPasswordGridPane" alignment="CENTER">
                    <PasswordField />
                </GridPane>
                <Label text="گذرواژه‌ی کنونی :  "/>
            </HBox>
            <HBox alignment="CENTER">
                <GridPane fx:id="newPasswordGridPane" alignment="CENTER">
                    <PasswordField />
                </GridPane>
                <Label text="گذرواژه‌ی نــــو :  "/>
            </HBox>
            <Label/>
            <GridPane fx:id="resultGridPane" alignment="CENTER">
                <Label text=""/>
            </GridPane>
            <Label/>
            <Button text="تأیید"/> <!-- TODO : action of this button -->
        </VBox>
    </center>

    <stylesheets>
        <URL value="@ButtonStyle.css"/>
        <URL value="@textStyle.css" />
    </stylesheets>
</BorderPane>
